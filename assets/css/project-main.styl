body
  padding-top : 60px;
  font-family: 'Roboto Condensed', sans-serif

input
  font-family: 'Roboto Condensed', sans-serif

.modal.client-id
  form
    margin-bottom : 0;

  input.client-id
    height      : 50px;
    font-weight : bold;
    font-size   : 28px;
    width       : 100%;
    color       : #333333;

.tracks-wrapper
  
  .tracklist
    padding : 0;
    margin  : 0;
    width : 700px;
    background-color #dfff7e;

    .track-wrapper
      list-style : none;
      width : 610px;
      background-color : rgba(0, 0, 0, .75);
      padding : 5px;

      .header-controls
        height : 20px;
        margin-bottom : 5px;

        .in-queue
          width : 100px;
          background-color red;

        .genre
          width : 100px;
          background-color green;          

      .body-content
        box-shadow : 0 0 0 1px rgba(0,0,0,.8);
        position : relative;

        .border
          position : absolute;
          height : 100px;
          width  : 100%;
          box-shadow : inset 0 1px 0 0 rgba(255,255,255,0.6), inset 1px 0 0 0 rgba(255,255,255,0.4)
          pointer-events: none;

        .cover-art
          width  : 100px;
          height : 100px;
          background-color    : #CCCCCC;
          background-position : center center;
          background-image    : url('/img/at.jpg');
          background-size     : cover;
          background-repeat   : no-repeat;

        .main-data-wrapper
          width : 500px;
          background-color #e5e5e5;
          padding : 5px;
          box-shadow : inset 1px 0 0 0 rgba(0,0,0,0.5);

          input
            width : 100%;
            display : block;
            border-radius : 1px;
            height : initial;
            margin : 0;
            padding : 0 5px 5px 5px;

            border-width:1px;
            border-style: solid;
            border-color: rgba(0,0,0,.02);
            background-color rgba(255,255,255,.4);
            box-shadow: none;

            &:focus
              border-color: #7d7d7d #9d9d9d #c2c2c2 #9d9d9d;
              background-color #ffffff;
              background-image : -webkit-linear-gradient(bottom, rgb(250,250,250) 81%, rgb(235,235,235) 100%);

            &.artist-name
              font-size : 35px;
              font-weight : bold;
              margin-bottom : 5px;

            &.track-name
              font-size : 20px;
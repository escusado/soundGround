// Bezel
bezel(top right bottom left)
  $colors = top right bottom left
  $shadows = ()
  for $current_color, i in $colors
    if $current_color > 0
      $shade = '255,255,255'
    else
      $shade = '0,0,0'
      $current_color = $current_color*-1
    if i == 0
      $direction = '0 1px'
    else if i == 1
      $direction = '-1px 0'
    else if i == 2
      $direction = '0 -1px'
    else if i == 3
      $direction = '1px 0'
    push($shadows,'inset '+$direction+' 0 0 rgba('+$shade+','+$current_color+')')
  $string = join(',',$shadows)
  @box-shadow(unquote($string))

//Clearfix
.clearfix:after {
  content: ".";
  display: block;
  clear: both;
  visibility: hidden;
  line-height: 0;
  height: 0;
}
 
.clearfix {
  display: inline-block;
}
 
html[xmlns] .clearfix {
  display: block;
}
 
* html .clearfix {
  height: 1%;
}


  line-height: 20px;
input
  font-family: 'Yanone Kaffeesatz', sans-serif;

//Button
.button
  padding : 1px 6px 3px 6px;
  display: inline-block;
  border-radius: 3px;
  text-shadow : 0 1px rgba(255,255,255,.5);
  box-shadow : 0 1px 0 0 rgba(255, 255, 255, 0.5) inset, -1px 0 0 0 rgba(255, 255, 255, 0.3) inset, 0 -2px 0 0 rgba(0, 0, 0, 0.3) inset, 1px 0 0 0 rgba(255, 255, 255, 0.3) inset, 0 0 0 1px rgba(0, 0, 0, 0.5)
  user-select: none;
  cursor : pointer;
  position : relative;
  overflow: hidden;
  color : rgba(0,0,0,.8);

  span
    font-size: 18px;
    font-weight: 700;

  &:hover
    .shade
      background-color: rgba(255,255,255,.2);
      position : absolute;
      top : -2px;
      left : 0;
      width : 100%
      height : 100%
      border-radius : 2px;

  &:active
    box-shadow : 0 1px 0 0 rgba(255, 255, 255, 0.5) inset, -1px 0 0 0 rgba(255, 255, 255, 0.3) inset, 0 -1px 0 0 rgba(0, 0, 0, 0.3) inset, 1px 0 0 0 rgba(255, 255, 255, 0.3) inset, 0 0 0 1px rgba(0, 0, 0, 0.5)
    padding : 1px 6px 2px 6px;
    margin-top: 1px;
    
    .shade
      background-color: rgba(255,255,255,.5);

